{
  "name": "Data Extension",
  "version": "1.0",
  "description": "See what it takes to power your day on the internet.",
  "permissions": ["tabs", "https://check-host.net/", "https://w3techs.com/", "https://builtwith.com/"],
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "manifest_version": 2
}
